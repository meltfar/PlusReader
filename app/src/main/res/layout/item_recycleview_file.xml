<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_recycleview_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/color_actionbar_touch">

    <ImageView
        android:id="@+id/iv_recycleview_icon_folder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_circle_fileback"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/folder_fab" />

    <ImageView
        android:id="@+id/iv_recycleview_icon_text"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/item_circle_textback"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_doc_text_am"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/iv_recycleview_icon_folder"
        android:layout_toRightOf="@id/iv_recycleview_icon_folder"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Android"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_file_lastModified"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="2016-8-20 20:23"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_file_permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="47dp"
        android:text="rwx"
        android:textSize="15sp" />


</RelativeLayout>